{
  "name": "starter-pack",
  "version": "0.0.3",
  "main": "index.js",
  "license": "MIT",
  "description": "React app build configuration and design system starter",
  "scripts": {
    "start": "serve ./dist",
    "watch": "yarn run clear:assets && node build --watch",
    "html": "yarn run clear:pages && node build --server",
    "build": "yarn run clear && node build --production && node build --server",
    "clear": "rm -rf dist/** && mkdir dist/assets && mkdir dist/pages && mkdir dist/node",
    "clear:assets": "rm -rf dist/assets/**",
    "clear:pages": "rm -rf dist/pages/**",
    "clear:node": "rm -rf dist/node/**",
    "prettier": "prettier --config .prettierrc.json --write ./src/**/*.js ./external_modules/**/*.js",
    "lint": "eslint . --ext .js --quiet",
    "test": "jest",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --config .prettierrc.json --write",
      "git add"
    ],
    "*.js": [
      "eslint --quiet",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "commitizen": "^2.10.1",
    "eslint": "^5.5.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.6.0",
    "prettier": "^1.14.2"
  },
  "dependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.2",
    "classnames": "^2.2.6",
    "css-loader": "^1.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "lint-staged": "^7.2.2",
    "lodash.get": "^4.4.2",
    "minimist": "^1.2.0",
    "normalize.css": "^8.0.0",
    "postcss-calc": "^6.0.1",
    "postcss-clean": "^1.1.0",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^7.0.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-discard-comments": "^4.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-remove-root": "^0.0.2",
    "postcss-smart-import": "^0.7.6",
    "prop-types": "^15.6.2",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "serve": "^10.0.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0"
  }
}
